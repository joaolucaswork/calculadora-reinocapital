#!/bin/sh

# Reino Capital Calculator - Pre-commit Hook
# Executes linting and basic tests before each commit

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Checking code style and linting..."
pnpm lint
if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Commit rejected."
    echo "ğŸ’¡ Run 'pnpm lint:fix' to auto-fix issues."
    exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type checking..."
pnpm check
if [ $? -ne 0 ]; then
    echo "âŒ Type checking failed. Commit rejected."
    echo "ğŸ’¡ Fix TypeScript errors before committing."
    exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
pnpm test
if [ $? -ne 0 ]; then
    echo "âŒ Unit tests failed. Commit rejected."
    echo "ğŸ’¡ Fix failing tests before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
